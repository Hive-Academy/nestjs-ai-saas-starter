{
  "name": "nestjs-langgraph",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nestjs-langgraph/src",
  "projectType": "library",
  "tags": ["domain:langgraph", "type:data-access"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nestjs-langgraph",
        "main": "libs/nestjs-langgraph/src/index.ts",
        "tsConfig": "libs/nestjs-langgraph/tsconfig.lib.json",
        "rollupConfig": "libs/nestjs-langgraph/rollup.config.js",
        "format": ["cjs", "esm"],
        "useLegacyTypescriptPlugin": false,

        "external": ["@hive-academy/langgraph-core"],
        "assets": [
          {
            "input": "./libs/nestjs-langgraph",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/nestjs-langgraph",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish dist/libs/nestjs-langgraph --access public"
      },
      "dependsOn": ["build"]
    },
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options typedoc.json",
        "cwd": "libs/nestjs-langgraph"
      }
    }
  }
}
