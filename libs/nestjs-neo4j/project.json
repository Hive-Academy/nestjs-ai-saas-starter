{
  "name": "@hive-academy/nestjs-neo4j",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nestjs-neo4j/src",
  "projectType": "library",
  "tags": ["domain:neo4j", "type:feature"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/nestjs-neo4j",
        "main": "libs/nestjs-neo4j/src/index.ts",
        "tsConfig": "libs/nestjs-neo4j/tsconfig.lib.json",
        "format": ["cjs", "esm"],
        "external": "all",
        "assets": [
          {
            "input": "./libs/nestjs-neo4j",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/nestjs-neo4j",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.lib.json --strict",
        "cwd": "libs/nestjs-neo4j"
      },
      "dependsOn": ["^typecheck"],
      "cache": false
    },
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typedoc --options typedoc.json",
        "cwd": "libs/nestjs-neo4j"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/libs/nestjs-neo4j"
      }
    }
  }
}
