{
  "name": "@hive-academy/langgraph-platform",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/langgraph-modules/platform/src",
  "projectType": "library",
  "tags": ["domain:langgraph", "type:feature", "module:platform"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/langgraph-platform",
        "main": "libs/langgraph-modules/platform/src/index.ts",
        "tsConfig": "libs/langgraph-modules/platform/tsconfig.lib.json",
        "format": ["cjs", "esm"],
        "external": "all",
        "assets": [
          {
            "input": "./libs/langgraph-modules/platform",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/langgraph-modules/platform",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.lib.json",
        "cwd": "libs/langgraph-modules/platform"
      },
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/libs/langgraph-platform"
      }
    }
  }
}
