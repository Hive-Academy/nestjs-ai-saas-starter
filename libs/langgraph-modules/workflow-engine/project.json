{
  "name": "langgraph-modules/workflow-engine",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/langgraph-modules/workflow-engine/src",
  "projectType": "library",
  "tags": ["domain:langgraph", "type:feature", "module:workflow-engine"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/langgraph-modules/workflow-engine",
        "main": "libs/langgraph-modules/workflow-engine/src/index.ts",
        "tsConfig": "libs/langgraph-modules/workflow-engine/tsconfig.lib.json",
        "rollupConfig": "libs/langgraph-modules/workflow-engine/rollup.config.js",
        "format": ["cjs", "esm"],
        "useLegacyTypescriptPlugin": false,

        "external": [
          "@hive-academy/langgraph-streaming",
          "@hive-academy/langgraph-functional-api",
          "@hive-academy/langgraph-core"
        ],
        "assets": [
          {
            "input": "./libs/langgraph-modules/workflow-engine",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/langgraph-modules/workflow-engine",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    }
  }
}
