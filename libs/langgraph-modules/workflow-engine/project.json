{
  "name": "@hive-academy/langgraph-workflow-engine",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/langgraph-modules/workflow-engine/src",
  "projectType": "library",
  "tags": ["domain:langgraph", "type:feature", "module:workflow-engine"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/langgraph-workflow-engine",
        "main": "libs/langgraph-modules/workflow-engine/src/index.ts",
        "tsConfig": "libs/langgraph-modules/workflow-engine/tsconfig.lib.json",
        "format": ["cjs", "esm"],
        "assets": [
          {
            "input": "./libs/langgraph-modules/workflow-engine",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/langgraph-modules/workflow-engine",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.lib.json",
        "cwd": "libs/langgraph-modules/workflow-engine"
      },
      "dependsOn": ["^typecheck"],
      "cache": true
    }
  }
}
