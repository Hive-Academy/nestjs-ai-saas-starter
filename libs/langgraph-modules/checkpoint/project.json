{
  "name": "langgraph-modules/checkpoint",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/langgraph-modules/checkpoint/src",
  "projectType": "library",
  "tags": [
    "domain:langgraph",
    "type:data-access",
    "module:checkpoint"
  ],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/langgraph-modules/checkpoint",
        "main": "libs/langgraph-modules/checkpoint/src/index.ts",
        "tsConfig": "libs/langgraph-modules/checkpoint/tsconfig.lib.json",
        "rollupConfig": "libs/langgraph-modules/checkpoint/rollup.config.js",
        "format": [
          "cjs",
          "esm"
        ],
        "useLegacyTypescriptPlugin": false,
        "external": [
          "@langchain/core",
          "@langchain/langgraph",
          "@langchain/langgraph-checkpoint-redis",
          "@langchain/langgraph-checkpoint-postgres",
          "@nestjs/common",
          "@nestjs/config",
          "reflect-metadata",
          "@hive-academy/langgraph-core",
          "ioredis",
          "pg",
          "sqlite",
          "sqlite3"
        ],
        "assets": [
          {
            "input": "./libs/langgraph-modules/checkpoint",
            "glob": "*.md",
            "output": "./"
          },
          {
            "input": "./libs/langgraph-modules/checkpoint",
            "glob": "package.json",
            "output": "./"
          }
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project tsconfig.lib.json",
        "cwd": "libs/langgraph-modules/checkpoint"
      },
      "dependsOn": [
        "^typecheck"
      ],
      "cache": true
    }
  }
}
