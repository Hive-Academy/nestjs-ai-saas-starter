{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/langgraph-modules/core/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/workflow-engine/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/time-travel/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/platform/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/monitoring/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/multi-agent/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/functional-api/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/hitl/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/streaming/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/checkpoint/tsconfig.lib.json"
    },
    {
      "path": "../../libs/nestjs-neo4j/tsconfig.lib.json"
    },
    {
      "path": "../../libs/langgraph-modules/memory/tsconfig.lib.json"
    },
    {
      "path": "../../libs/nestjs-chromadb/tsconfig.lib.json"
    }
  ]
