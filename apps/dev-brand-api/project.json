{
  "name": "dev-brand-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dev-brand-api/src",
  "projectType": "application",
  "tags": ["scope:devbrand", "type:app", "platform:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [],
      "options": {
        "buildTarget": "dev-brand-api:build-dev",
        "watch": true,
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {},
        "production": {
          "buildTarget": "dev-brand-api:build"
        }
      }
    },
    "build-dev": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "options": {
        "outputPath": "dist/apps/dev-brand-api",
        "main": "apps/dev-brand-api/src/main.ts",
        "tsConfig": "apps/dev-brand-api/tsconfig.app.json",
        "assets": ["apps/dev-brand-api/src/assets"],
        "clean": false
      }
    },
    "serve:webpack": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "dev-brand-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "dev-brand-api:build:development"
        },
        "production": {
          "buildTarget": "dev-brand-api:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
